<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="#202020"/>
    <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}" Color="White"/>
    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="{StaticResource SystemAccentColorDark1}"/>
    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" Color="{StaticResource {x:Static SystemColors.HighlightTextColorKey}}" />
    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#444" />
    
    <SolidColorBrush x:Key="WindowBorderColor" Color="#666666"/>
    <SolidColorBrush x:Key="WidgetMouseOver" Color="#333333"/>
    <SolidColorBrush x:Key="ButtonMouseOver" Color="#333333"/>
    <SolidColorBrush x:Key="WidgetBackground" Color="#282828"/>

</ResourceDictionary>